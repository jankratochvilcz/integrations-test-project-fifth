{
    "name": "integrations-automation",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "start": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "format-fix": "npx prettier --write \"./**/*.{js,ts,json,md,yml}\"",
        "format-check": "npx prettier --check \"./**/*.{js,ts,json,md,yml}\"",
        "lint-fix": "eslint \"src/**/*.{ts,tsx}\" --fix",
        "lint-check": "eslint \"src/**/*.{ts,tsx}\"",
        "ts-compile-check": "tsc",
        "audit": "npm audit --moderate",
        "validate-spec": "npx ajv -d src/spec/team.json -s src/spec/team.schema.json",
        "integrity-checks": "npm-run-all format-check lint-check ts-compile-check validate-spec audit test"
    },
    "dependencies": {
        "@nestjs/common": "^7.6.5",
        "@nestjs/config": "^0.5.0",
        "@nestjs/core": "^7.0.0",
        "@nestjs/platform-express": "^7.0.0",
        "@octokit/rest": "^18.0.6",
        "@sentry/node": "^6.1.0",
        "@types/hbs": "^4.0.1",
        "@types/node-fetch": "^2.5.7",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.12.2",
        "hbs": "^4.1.2",
        "lodash": "^4.17.21",
        "node-fetch": "^2.6.0",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.5.4"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.0.0",
        "@nestjs/schematics": "^7.0.0",
        "@nestjs/testing": "^7.0.0",
        "@types/express": "^4.17.3",
        "@types/jest": "25.2.3",
        "@types/lodash": "^4.14.168",
        "@types/node": "^13.9.1",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "3.0.2",
        "@typescript-eslint/parser": "3.0.2",
        "ajv-cli": "^4.0.1",
        "eslint": "7.1.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-prettier": "^3.3.0",
        "jest": "26.0.1",
        "jest-mock-extended": "^1.0.10",
        "npm-run-all": "^4.1.5",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2",
        "ts-jest": "26.1.0",
        "ts-loader": "^6.2.1",
        "ts-node": "^8.6.2",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^3.7.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "prettier": "@doist/prettier-config"
}
